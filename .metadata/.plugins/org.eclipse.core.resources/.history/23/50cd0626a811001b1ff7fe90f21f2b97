package com.minigame;

import java.util.ArrayList;
import java.util.Scanner;

public class GameMenu {

	public void GameMenu() {
		Scanner sc = new Scanner(System.in);
		ArrayList<User> usr = new ArrayList<User>();   

		while(true) {
			int choice ;
			System.out.println("미니게임 메뉴를 골라주세요");
			System.out.println("1. 유저등록");
			System.out.println("2. 야구게임");
			System.out.println("3. 미공개게임");
			System.out.println("4. 랭킹");
			choice=sc.nextInt();
			User u;
			if(choice==1) {
				u = new User();
				System.out.println("유저 이름을 입력해주세요");
				u.name = sc.next();
				System.out.println("구매하실 코인갯수를 입력하세요");
				u.coin = sc.nextInt();
				usr.add(u);

			}


			if(choice==2) {
				//baseball
			}


			if(choice==3) {
				//new game
			}



			if(choice==4) {
				//Ranking
			}




		}


	}
}