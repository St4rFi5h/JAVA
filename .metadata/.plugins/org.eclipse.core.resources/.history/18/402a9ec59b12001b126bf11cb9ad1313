
public class Arraytest {


	///x 자로 더한 값 
	public static void main(String[] args) {
		int[][] a = new int[5][5];
		int x =1;
		int sum = 0;
		for(int i = 0; i < 5; i++) {
			for(int j = 0; j < 5; j++) {
				a[i][j] = x;
				x++;

			}

		}


		for(int i = 0; i <= 5; i++) {
			for(int j = 4; j >=0; j--) {

				if (j<i) {
					
					a[i][j]=0;
				}

			}

		}
		for(int i = 0; i < 5; i++) {
			for(int j = 0; j < 5; j++) {
				System.out.printf("%4d",a[i][j]);
			}
			System.out.println("");
		}


	}
}
